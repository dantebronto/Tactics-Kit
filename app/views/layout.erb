<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html lang='en' xml:lang='en' xmlns='http://www.w3.org/1999/xhtml'>
  <head>
    <meta content='text/html; charset=utf-8' http-equiv='Content-type' />
    <title>Tactics Kit</title>
    <link charset='utf-8' href='/stylesheets/style.css' media='screen' rel='stylesheet' type='text/css' />
    <link charset='utf-8' href='/css/vader/jquery-ui-1.8.17.custom.css' media='screen' rel='stylesheet' type='text/css' />
    
  <% if ENV['RACK_ENV'] == 'production' %>
    <script src='/javascripts/game.min.js' type='text/javascript'></script>
  <% else %>
    <% ScriptManager.all_scripts.each do |script| %>
    <script src='<%= script %>' type='text/javascript'></script>
    <% end %>
  <% end %>
  
    <script id='character-info-template' type='text/template'>
      <li>
        <div class='character-info'>
          <div class='name'> lvl <@= level @> <@= name @></div>
          <div class='stat-bar-holder'>
            <div class='hp stat-bar' style="width:<@= (hpLeft/hp)*100 @>%"><span><@= hpLeft @>/<@= hp @> hp</span></div>
            <div class='ap stat-bar' style="width:<@= (apLeft/ap)*100 @>%"><span><@= apLeft @>/<@= ap @> ap</span></div>
          </div>
          <div class='sprite'><img src='<@= sprite @>' /></div>
          <@ _.each(specials, function(special){ @> <@= special.button() @> <@ })@>
        </div>
      </li>
    </script>
  </head>
  <body>
    <div id='wrapper'>
      <div id='info'>
        <ul id='console'></ul>
        <div class='header'></div>
        <ul></ul>
        <div id='slider'></div><div id='slider-label'>Animation Speed</div>
      </div>
      <div id='stage'>
        <div id='map'></div>
      </div>
    </div>
    <div id='dialog'></div>
  </body>
</html>